<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/customToolbarOne">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/ic_baseline_subject_24"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/topTab"
                        android:text="Howdy Robin Kumar !!"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginStart="25dp"
                        android:textSize="15sp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginStart="25dp"
                            android:src="@drawable/ic_baseline_fmd_good_24"
                            android:layout_marginTop="3dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginStart="5dp"
                            android:text="Karnataka Bangalore"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imgCall"
                        android:src="@drawable/ic_baseline_videocam_24"
                        android:layout_marginEnd="20dp"/>
                </LinearLayout>
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:id="@+id/profileLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tool"
        >
        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                app:cardCornerRadius="30sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:elevation="10dp"
                app:layout_constraintTop_toTopOf="parent" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="159dp"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="+ INVITE"
                                android:textAlignment="textEnd"
                                android:layout_marginEnd="20dp"
                                android:layout_marginTop="20dp"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/base_them_color"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/nameTextView1"
                                android:text="Robin kumar"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:layout_margin="2dp"
                                android:textColor="@color/base_them_color"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/personProfession"
                                android:text="Coder | Developer"
                                android:textSize="13sp"
                                android:layout_margin="2dp"
                                android:textColor="#6C7C86"/>
                            <TextView
                                android:id="@+id/distanceTextView1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Within 2.5 Km"
                                android:textColor="@color/base_them_color"
                                android:layout_margin="2dp"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                />
                            <ProgressBar
                                android:id="@+id/progress"
                                android:layout_width="120dp"
                                android:layout_height="15dp"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_margin="2dp"
                                android:progressDrawable="@drawable/progress_bar_design"
                                android:progress="30"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/email"
                            android:text="Coffee | Business | Frienship"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginLeft="25dp"
                            android:textColor="@color/base_them_color"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/descriptionTextView1"
                            android:text="hi_community"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="25dp"
                            android:layout_marginBottom="15dp"
                            android:textSize="15sp"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/base_them_color"
                            />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:backgroundTint="@color/base_them_color"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.2"
                android:elevation="10dp"
                android:outlineSpotShadowColor="#ACAFB0"

                app:layout_constraintHorizontal_bias="0">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageViewPerson1"
                    android:src="@drawable/luffy"/>

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/profileLayout"
        android:background="#E5E6E4">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardCornerRadius="20dp"
            android:elevation="10dp"
            >
            <androidx.fragment.app.FragmentContainerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                >
            </androidx.fragment.app.FragmentContainerView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>